# FOR UNIX SYSTEMS

# OCI Credentials
export OCI_CONFIG_FILE=~/.oci/config
export OCI_CONFIG_PROFILE=DEFAULT
export OCI_TENANCY_OCID=ocid1.tenancy.oc1..actual-tenancy-id
export OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..actual-compartment-id

# Database credentials
export DB_USER=TODOUSER
export DB_PASSWORD=YourActualPassword123

# Telegram Bot
export TELEGRAM_BOT_TOKEN=1234567890:your-actual-telegram-token
export TELEGRAM_BOT_NAME=your_actual_bot_name

# UI Authentication
export UI_USERNAME=actual_admin_username
export UI_PASSWORD=actual_admin_password

# JWT Secret
export JWT_SECRET=your-actual-secret-key-should-be-at-least-256-bits-long


